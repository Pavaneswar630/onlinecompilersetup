apply plugin: 'java'
apply plugin: 'application'

repositories {
    mavenCentral()
}

dependencies {
    implementation 'junit:junit:4.13.2'
}

// 1. Tell Gradle to look for code in the CURRENT folder (./)
sourceSets {
    main {
        java {
            srcDirs = ['.']
        }
    }
}

// 2. Tell Gradle the main class is named "Main"
application {
    mainClass = 'Main'
}
